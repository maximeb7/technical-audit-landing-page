---
import { home } from '../../data/site';
const CALENDLY = 'CALENDLY_LINK';
const PHOTO = '/images/photo-maxime.jpg';
---

<main class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Hero Content -->
    <div class="relative z-10 px-4 pt-15 ">
        <div class="max-w-5xl mx-auto text-center">


            <!-- Title with animated gradient -->
            <h1 
                class="text-4xl md:text-6xl font-bold font-cal bg-gradient-to-r from-blue-500 via-blue-300 via-orange-200 to-blue-100  bg-clip-text text-transparent animate-gradient-x whitespace-pre-line"
            >
                {home.title}
            </h1>

            <!-- Description -->
            <p class="mt-8 text-xl text-white  max-w-2xl mx-auto font-sans opacity-0 animate-fade-up animation-delay-100">
                {home.description}
            </p>

            <!-- Stats -->
            <div class="grid grid-cols-2 md:grid-cols-3 gap-8 max-w-3xl mx-auto mt-16 opacity-0 animate-fade-up animation-delay-200">
                {home.stats.map(stat => (
                    <div class="text-center">
                        <div class="text-4xl font-bold font-cal bg-gradient-to-r from-blue-100 to-blue-400 bg-clip-text text-transparent">
                            {stat.value}
                        </div>
                        <div class="text-sm text-gray-400 mt-1">{stat.label}</div>
                    </div>
                ))}
            </div>

            <!-- Features -->
            <div class="cursor-default grid md:grid-cols-3 gap-8 max-w-6xl max-h-5xl mx-auto mt-16 opacity-3 animate-fade-up animation-delay-200">
                {home.features.map(feature => (
                        <div
                                class="bg-gray-900/40 backdrop-blur-md rounded-2xl p-6 border border-gray-800/50
         hover:border-blue-700/80 hover:bg-gray-800/20
         transition-all duration-300 ease-out transform
         hover:-translate-y-1 hover:shadow-[0_4px_25px_rgba(147,197,253,0.15)]"
                        >
                        <h3 class="text-xl font-bold text-white mb-2">{feature.title}</h3>
                        <p class="text-gray-200 text-md">{feature.description}</p>
                    </div>
                ))}
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 mt-10 opacity-0 animate-fade-up animation-delay-200 justify-center">
                
                <button
                    onclick="document.getElementById('frameworks').scrollIntoView({ behavior: 'smooth' })"
                    class="inline-flex items-center justify-center px-6 py-3 border-2 bg-indigo-700 border-indigo-500/50 text-base font-medium rounded-xl text-white hover:bg-purple-500/10 transition-all duration-300"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672Zm-7.518-.267A8.25 8.25 0 1 1 20.25 10.5M8.288 14.212A5.25 5.25 0 1 1 17.25 10.5" />
                    </svg>

                    On y va !
                </button>
            </div>
        </div>
    </div>

  
</main>

<style>
    @keyframes float {
        0%, 100% { transform: translate(0, 0); }
        50% { transform: translate(-10px, 10px); }
    }

    @keyframes gradient-x {
        0%, 100% { background-size: 200% 100%; background-position: left center; }
        50% { background-position: right center; }
    }

    @keyframes fade-up {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    .animate-gradient-x {
        animation: gradient-x 15s ease infinite;
    }

    .animate-float {
        animation: float 8s ease-in-out infinite;
    }

    .animate-fade-up {
        animation: fade-up 1s ease forwards;
    }

    .animation-delay-100 {
        animation-delay: 100ms;
    }

    .animation-delay-200 {
        animation-delay: 200ms;
    }

    .animation-delay-300 {
        animation-delay: 300ms;
    }

    .animation-delay-400 {
        animation-delay: 400ms;
    }

    .animation-delay-1000 {
        animation-delay: 1000ms;
    }
</style>